<% if params[:action] == 'show' %>
	<% user_preferences = UserPreference.find_by_user_id(User.current.id) %>	

	<%= form_tag('edit_preferences', :method => :get) do %>
	<h3><%= l(:label_preferences) %></h3>
	<%= hidden_field_tag "preference_type", 'metrics' %>
	<%= check_box_tag "preference[cmi_metrics_effort]", 1, user_preferences[:cmi_metrics_effort] == "1" %>
		<%= label_tag "preference[cmi_metrics_effort]", l(:"cmi.label_effort") %><br />
	<%= check_box_tag "preference[cmi_metrics_time]", 1, user_preferences[:cmi_metrics_time] == "1" %>
		<%= label_tag "preference[cmi_metrics_time]", l(:"cmi.label_time") %><br />
	<%= check_box_tag "preference[cmi_metrics_cost]", 1, user_preferences[:cmi_metrics_cost] == "1" %>
		<%= label_tag "preference[cmi_metrics_cost]", l(:"cmi.label_cost") %><br />
	<%= check_box_tag "preference[cmi_metrics_advance]", 1, user_preferences[:cmi_metrics_advance] == "1" %>
		<%= label_tag "preference[cmi_metrics_advance]", l(:"cmi.label_advance") %><br />
	<%= check_box_tag "preference[cmi_metrics_profitability]", 1, user_preferences[:cmi_metrics_profitability] == "1" %>
		<%= label_tag "preference[cmi_metrics_profitability]", l(:"cmi.label_profitability") %><br />
	<%= check_box_tag "preference[cmi_metrics_income]", 1, user_preferences[:cmi_metrics_income] == "1" %>
		<%= label_tag "preference[cmi_metrics_income]", l(:"cmi.label_profit") %><br />
	<%= check_box_tag "preference[cmi_metrics_cashflow]", 1, user_preferences[:cmi_metrics_cashflow] == "1" %>
		<%= label_tag "preference[cmi_metrics_cashflow]", l(:"cmi.label_cashflow") %><br />
	<%= check_box_tag "preference[cmi_metrics_deviation]", 1, user_preferences[:cmi_metrics_deviation] == "1" %>
		<%= label_tag "preference[cmi_metrics_deviation]", l(:"cmi.label_deviation") %><br />
	<%= check_box_tag "preference[cmi_metrics_others]", 1, user_preferences[:cmi_metrics_others] == "1" %>
		<%= label_tag "preference[cmi_metrics_others]", l(:"cmi.label_others") %><br />
	<p><%= submit_tag l(:button_apply), :class => 'button-small', :name => nil %></p>
	<% end %>
<% elsif params[:action] == 'yearly' %>
	<% user_preferences = UserPreference.find_by_user_id(User.current.id) %>

