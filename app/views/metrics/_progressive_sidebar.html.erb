	<%= hidden_field_tag "preference_type", 'yearly' %>
	<%= check_box_tag "preference[cmi_yearly_effort]", 1, user_preferences[:cmi_yearly_effort] == "1" %>
		<%= label_tag "preference[cmi_yearly_effort]", l(:"cmi.label_effort") %><br />
	<%= check_box_tag "preference[cmi_yearly_cost]", 1, user_preferences[:cmi_yearly_cost] == "1" %>
		<%= label_tag "preference[cmi_yearly_cost]", l(:"cmi.label_cost") %><br />
	<%= check_box_tag "preference[cmi_yearly_pal]", 1, user_preferences[:cmi_yearly_pal] == "1" %>
		<%= label_tag "preference[cmi_yearly_pal]", l(:"cmi.label_pal") %><br />
	<p><%= submit_tag l(:button_apply), :class => 'button-small', :name => nil %></p>
	<% end %>
<% end %>